---
import { Prism } from '@astrojs/prism';
let { code, lang, format } = Astro.props;
// Note: This is a CJS module
import formatter from 'js-beautify';
const beautify = formatter.css;
let formattedCode = code;
format = format != null ? format : true;
if(format) {
  formattedCode = beautify(code, { indent_size: 2 })
}
---

<Prism lang={lang} code={formattedCode} />
